#!/usr/bin/env sh

ln -s $PWD/.zshrc ~
ln -s $PWD/.zshenv ~
ln -s $PWD/.spacemacs ~
ln -s $PWD/.gitconfig ~
ln -s $PWD/.vimrc ~
ln -s $PWD/.tmux.conf ~
ln -s $PWD/.gitignore_global ~
ln -s $PWD/ian.zsh-theme ~/.oh-my-zsh/themes

mkdir -p $HOME/bin/completions
ln -s {$PWD,$HOME}/bin/sd
ln -s {$PWD,$HOME}/bin/completions/_sd

mkdir -p $HOME/sd
for file in $PWD/sd-common/*; do
  ln -s "$file" "$HOME/sd/$(basename "$file")"
done

git clone --recursive https://github.com/syl20bnr/spacemacs ~/.emacs.d
