#!/usr/bin/env sh

st="$HOME/Library/Application Support/Sublime Text 3/Packages/User"
rm -r "$st"
ln -s "$PWD/sublime" "$st"

defaults write -g ApplePressAndHoldEnabled -bool false
defaults write com.apple.Terminal TotalTerminalHideStatusItemRegardless -bool yes

brew install cask --ignore-dependencies

brew install git zsh ack jq ngrok nmap rust flow sqlite node \
             terminal-notifier python3 fzf leiningen brew-cask

brew cask install alfred emacs google-chrome java transmission \
                  dropbox ghc iterm2 totalterminal vlc
